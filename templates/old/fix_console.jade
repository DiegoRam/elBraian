extends layout

block scripts
	script(src="static/js/newconsole.js")
	script(src="static/components/bootstrap/dist/js/bootstrap.js")
	script(src="//scratchblocks.github.io/scratchblocks2.js")
block styles
	link(rel="stylesheet", href="/static/components/jqueryui/themes/smoothness/jquery-ui.css")
	link(rel="stylesheet", href="//scratchblocks.github.io/scratchblocks2.css")
block main
	.page-header
		.row
			.container-fluid
				.col-md-5
					.well-console#counter
						h3.console >: cantidad de astronautas
				.col-md-2
					img.img-rounded(src="/static/img/roboluna.jpg", height="170", width="150", style ="float: left")

				.col-md-5
					.well-console 
						h3.console elbraian >_ Debo rescatar a mi amigo el satelite!
						img(src="/static/img/prompt.gif", width="50", height="25")
	.container-fluid
		.row
			.col-md-3.col-md-offset-1
				.panel.panel-warning
					.panel-heading scratch
					.panel-body
						pre.blocks
							ul.list-group#scratch
								li.list-group-item 
									|when [comenzar mision v] key pressed
								li.list-group-item
									|move (1) steps
								li.list-group-item
									|turn right (30) degrees
								li.list-group-item
									|turn left (30) degrees
								li.list-group-item
									|stop
								li.list-group-item
									|if (condition) then
									|end
							
			.col-md-3
				.panel.panel-success#panel-control
					.panel-heading acciones
					.panel-body
						ul.list-group#actions
							li.list-group-item
								span.glyphicon.glyphicon-arrow-up &nbsp;avanzar
							li.list-group-item
								span.glyphicon.glyphicon-stop &nbsp;parar 
							li.list-group-item
								span.glyphicon.glyphicon-arrow-down &nbsp;retroceder
							li.list-group-item
								span.glyphicon.glyphicon-chevron-right &nbsp;rotar derecha
							li.list-group-item
								span.glyphicon.glyphicon-chevron-left &nbsp;rotar izquierda
						button.btn.btn-success.center-block#execute(data-loading-text="en progreso...") comezar mision
			.col-md-3
				.panel.panel-primary
					.panel-heading secuencia
					.panel-body
						ol.list-group#steps
							li.list-group-item
								span.glyphicon.glyphicon-arrow-up &nbsp;avanzar
								input.input-list(type="number", value = 2) 
							li.list-group-item
								span.glyphicon.glyphicon-chevron-left &nbsp;rotar izquierda
								input.input-list(type="number", value = 0.3) 
							li.list-group-item
								span.glyphicon.glyphicon-arrow-up &nbsp;avanzar
								input.input-list(type="number", value = 1)
							li.list-group-item
								span.glyphicon.glyphicon-chevron-right &nbsp;rotar derecha
								input.input-list(type="number", value = 0.3) 
							li.list-group-item
								span.glyphicon.glyphicon-arrow-up &nbsp;avanzar
								input.input-list(type="number", value = 2)
block final_scripts
	script
		$(document).ready(function() {
			scratchblocks2.parse();
			});
